rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if the user is the specific admin email
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'shamanthcareers@gmail.com';
    }

    match /wins/{winId} {
      // Only the specific admin email can read or write
      allow read, write: if isAdmin();
    }

    match /reflections/{reflectionId} {
      allow read, write: if isAdmin();
    }
    
    match /users/{userId} {
      allow read, write: if isAdmin();
    }
  }
}
