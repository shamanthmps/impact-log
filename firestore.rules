rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if matches user's UID
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /wins/{winId} {
      // Allow read/write if the user is authenticated and is the owner of the document
      // We assume every 'win' document has a 'userId' field.
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || resource == null);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
  }
}
